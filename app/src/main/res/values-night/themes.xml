<?xml version="1.0" encoding="utf-8"?>
<resources>

   <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
      <item name="android:fontFamily">@font/normativeprobold</item> <!-- Default font -->
   </style>

   <style name="AppTextAppearanceArabic" parent="TextAppearance.AppCompat">
      <item name="android:fontFamily">@font/cairobold</item> <!-- Arabic font -->
   </style>


   <style name="Theme.Jawwna" parent="Theme.Material3.DayNight.NoActionBar">
      <item name="colorPrimary">@color/colorPrimaryNightMode</item>
      <item name="android:windowTranslucentStatus">true</item>
      <item name="colorAccent">@color/colorAccentNightMode</item>
      <item name="android:colorBackground">@color/colorBackgroundNightMode</item>

      <!-- Apply the font to default text appearances -->
      <item name="android:textAppearanceLarge">@style/AppTextAppearance</item>
      <item name="android:textAppearanceMedium">@style/AppTextAppearance</item>
      <item name="android:textAppearanceSmall">@style/AppTextAppearance</item>
   </style>
</resources>